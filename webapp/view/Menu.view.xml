<mvc:View controllerName="rfmenu.controller.Menu"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns="sap.m">

    <Page id="menuPage" showHeader="true">
        <headerContent>
            <Button id="logoffButton" 
                icon="sap-icon://log" 
                text="Sign Out" 
                type="Emphasized"
                press="onLogoff"/>
        </headerContent>
        <content>
            <!-- FlexBox usato per disporre le GenericTile in griglia responsiva -->
            <FlexBox id="_IDGenFlexBox1" wrap="Wrap" justifyContent="Center" class="rfTileGrid" renderType="Bare">
                <items>
                    <GenericTile id="_IDGenGenericTile" header="RF Interface" press="onNavRF1" class="rfTile"/>
                    <GenericTile id="_IDGenGenericTile1" header="Interface RF Storage Location" press="onNavRF2" class="rfTile"/>
                    <GenericTile id="_IDGenGenericTile2" header="Rf Interface Reception" press="onNavRF3" class="rfTile"/>
                    <GenericTile id="_IDGenGenericTile4" header="Test RF Enviroment" press="onNavStandard" class="rfTile"/>
                </items>
            </FlexBox>
        </content>
    </Page>

</mvc:View>
